<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des capteurs disponibles"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:paddingBottom="10dp"/>

    <!-- ScrollView pour permettre le dÃ©filement de la liste -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <ListView
            android:id="@+id/sensor_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </ScrollView>

    <!-- Bouton Retour positionnÃ© en bas -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button_pink"
        android:padding="10dp"
        android:text="ðŸ”™ Retour"
        android:textColor="@color/button_text_color"/>
</LinearLayout>
